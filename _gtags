#compdef gtags

_arguments -n : \
  '(--accept-dotfiles)--accept-dotfiles[Accept dot files and dot directories]' \
  '(-c --compact)'{-c,--compact}'[Make GTAGS in compact format]' \
  '(--config)--config[Print the value of config variable name]' \
  '(-d --dump)'{-d,--dump}'[Dump a tag file]' \
  '(--explain)--explain[Explain handling files]' \
  '(-f --file)'{-f,--file}'[Browse through all source files whose names are listed in file]:file:_files' \
  '(--gtagsconf)--gtagsconf=-[Set the GTAGSCONF envirnoment variable to file]:conffile:_files' \
  '(--gtagslabel)--gtagslabel=-[Set the GTAGSLABEL environment variable to label]::labels:(ctags-exuberant pygments)' \
  '(-I --idutils)'{-I,--idutils}'[Also make the ID database file for idutils]' \
  '(-i --incremental)'{-i,--incremental}'[Update tag files incrementally]' \
  '(-O --objdir)'{-O,--objdir}'[Use BSD-style objedir as location of tag files]' \
  '(--single-update)--single-update[Update tag files for single file]:singlefile:_files' \
  '(--sqlite3)--sqlite3[Use SQLite3 API to make tag files]'
  '(--statistics)--statistics[Print statistics information]' \
  '(-q --quiet)'{-q,--quiet}'[Quiet mode]' \
  '(-v --verbose)'{-v,--verbose}'[Verbose mode]' \
  '(-w --warning)'{-w,--warning}'[Print warnings messages]' \
  '(--debug)--debug[Enable debug mode]' \
  '(- :)--help[Print usage message]' \
  '*: :_files -/'

